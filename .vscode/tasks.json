{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C++",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${fileDirname}/build",
                "&&",
                "g++",
                "-g",
                "-Wall",
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}.o",
                "&&",
                "${fileDirname}/build/${fileBasenameNoExtension}.o",
                // "-o",
                // "${fileDirname}/build/${fileBasenameNoExtension}",
                // "&&",
                // "${fileDirname}/build/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Сборка и запуск C++"
        }
    ]
}